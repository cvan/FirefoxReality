<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/urlEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="40dp"
        android:ems="10"
        android:inputType="textUri"
        android:background="@drawable/url_background"
        android:textColor="@color/fog"
        android:textColorHighlight="@color/dusk"
        android:selectAllOnFocus="true" />

    <RelativeLayout
        android:id="@+id/urlLeftContainer"
        android:visibility="gone"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/loadingView"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/loading_shape"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/insecureIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/icon_lock_insecure_network"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/urlRightContainer"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end">

        <org.mozilla.vrbrowser.ui.UIButton
            android:id="@+id/microphoneButton"
            style="?attr/urlBarIconStyle"
            android:src="@drawable/ic_icon_microphone"
            android:tint="@color/fog" />

        <org.mozilla.vrbrowser.ui.UIButton
            android:id="@+id/bookmarkButton"
            style="?attr/urlBarIconStyle"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_icon_bookmark"
            android:tint="@color/fog" />

            <LinearLayout
                style="?attr/navigationBarStyle"
                android:id="@+id/focusModeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:padding="0dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <org.mozilla.vrbrowser.ui.UIButton
                    android:id="@+id/resizeEnterButton"
                    style="?attr/navigationBarButtonStyle"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_icon_focus_mode_resize" />

                <org.mozilla.vrbrowser.ui.UIButton
                    android:id="@+id/focusExitButton"
                    style="?attr/navigationBarButtonStyle"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_icon_focus_mode_exit" />
            </LinearLayout>

    </RelativeLayout>
</merge>
